{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "declaration": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["../../backend/src/*"],
      "@/*": ["../../backend/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    {
      "path": "../../backend"
    }
  ],
  "exclude": [
    "node_modules"
  ]
}