generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CableModemStatus {
  Active
  Suspended
  Provision
}

// CableModem model - matches Swagger CableModem schema exactly
model CableModem {
  id          String           @id @default(uuid())
  name        String           @unique // Required and must be unique per requirements
  description String?
  status      CableModemStatus @default(Active)
  validSince  DateTime?
  tags        String[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@map("cable_modems")
}
